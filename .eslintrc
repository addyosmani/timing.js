{
    "rules": {
        "no-console": 0,
        "indent": [
            2,
            2
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "never"
        ],
        "no-unused-vars": 1
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "mocha": true,
        "commonjs": true
    },
    "extends": "eslint:recommended"
}
